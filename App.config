<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>

    <appSettings>
        <!-- Separate multipe recipients with a comma ',' -->
        <add key="ErrorNotificationsReceivers" value="admin@test.com"/>
    </appSettings>

    <system.net>
        <mailSettings>
            <smtp deliveryMethod="Network"
                  from="service@test.com">
                <network
                  host="YOUR SMTP HOST HERE"
                  port="25"
                  defaultCredentials="true"
        />
            </smtp>
        </mailSettings>

    </system.net>

</configuration>